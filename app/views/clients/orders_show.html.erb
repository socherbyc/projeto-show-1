<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @order.number %>
</p>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Price</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.amount %></td>
        <td><%= number_to_currency(order_detail.price, locale: :"pt-BR", unit: "R$") %></td>
        <td><%= order_detail.product %></td>
      </tr>
    <% end %>
  </tbody>
</table>

Total: <%= number_to_currency(@total, locale: :"pt-BR", unit: "R$") %> <br>

<%= link_to 'Back', client_orders_path %>
