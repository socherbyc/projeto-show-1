<table>
    <thead>
        <tr>
        <th>Number</th>
        <th>Total</th>
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @orders.each do |order| %>
        <tr>
            <td><%= order.number %></td>
            <td><%= number_to_currency(@orders_totals[order.number], locale: :"pt-BR", unit: "R$") %></td>
            <td><%= link_to 'show', client_orders_show_path(@client, order) %></td>
        </tr>
        <% end %>
    </tbody>
</table>

Total: <%= number_to_currency(@orders_totals.values.sum(), locale: :"pt-BR", unit: "R$") %> <br>

